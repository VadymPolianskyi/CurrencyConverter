<ConvertorGridLayout>:
        id: converter
        rows: 3
        padding: 20
        spacing: 20

        BoxLayout:
                orientation: "horizontal"
                AnchorLayout:
                        padding: -20
                        Label:
                                text: "USD"
                                font_size: 20
                                size_hint_y: None
                AnchorLayout:
                        padding: 50, 0,50,0
                        Button:
                                id: butt
                                text: root.currency
                                font_size: 20
                                size_hint_y: None
                                height: "30dp"
                                on_release: root.open_drop()

        BoxLayout:
                AnchorLayout:
                        TextInput:
                                id: input
                                font_size: 20
                                multiline: False
                AnchorLayout:
                        padding: -20
                        Label:
                                id: result
                                text: root.result
                                font_size: 20
                                size_hint_y: None
                                height: 20
        AnchorLayout:
                padding: 50, 0,50,0
                Button:
                        text: "Calculate"
                        font_size: 20
                        size_hint_y: None
                        height: "40dp"
                        on_release: root.convert(input.text)
